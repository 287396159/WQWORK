<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/top_View_cardView"
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:layout_height="88dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <TextView
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:text="卡片名稱：5689"
            android:textSize="26dp"
            android:id="@+id/item_top_view_drivaceIdText"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="18dp"
            android:layout_below="@id/item_top_view_drivaceIdText"
            android:textColor="#000000"
            android:text="設備類型：text"
            android:textSize="16dp"
            android:id="@+id/item_top_view_drivceType_tv"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="18dp"
            android:textColor="#000000"
            android:text="text"
            android:textSize="16dp"
            android:layout_below="@id/item_top_view_drivceType_tv"
            android:id="@+id/item_top_view_version_tv"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/item_top_view_reset_btn"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="復位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
