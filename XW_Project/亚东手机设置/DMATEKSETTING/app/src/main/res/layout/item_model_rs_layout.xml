<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/item_read_set_cardView"
        android:layout_width="match_parent"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_model_spinnerTextView"
                android:text="model:  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_bg"
                android:id="@+id/item_model_set_spinner"
                android:layout_alignBottom="@id/item_model_setBtn"
                android:layout_marginBottom="5dp"
                android:layout_width="150dp"
                android:layout_height="35dp" />

            <Button
                android:layout_below="@id/item_model_spinnerTextView"
                android:id="@+id/item_model_setBtn"
                android:layout_toRightOf="@id/item_model_set_spinner"
                android:layout_marginLeft="10dp"
                android:text="設置"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/item_model_setBtn"
                android:id="@+id/item_model_toastTView"
                android:visibility="gone"
                android:text="ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:text="-----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="5dp"
                android:layout_below="@id/item_model_setBtn"
                android:id="@+id/item_model_readBtn"
                android:layout_marginLeft="10dp"
                android:text="讀取"
                android:layout_toRightOf="@id/item_model_readEtext"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_alignBottom="@id/item_model_readBtn"
                android:id="@+id/item_model_readEtext"
                android:hint="輸入值，可設置參數"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_bg"
                android:layout_marginBottom="5dp"
                android:layout_width="150dp"
                android:layout_height="35dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
