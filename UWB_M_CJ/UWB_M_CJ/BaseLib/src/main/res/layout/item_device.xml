<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/list_item_normal">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Id"
            android:background="@drawable/textview_special_bg"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"/>

        <TextView
            android:id="@+id/tvType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Type"/>


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"/>

        <TextView
            android:id="@+id/tvFVersion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Firmware Version"
            android:background="@drawable/textview_special_bg"/>


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"/>

        <TextView
            android:id="@+id/tvHVersion"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="10sp"
            android:text="HVersion"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/list_click_bg">

    </LinearLayout>

</FrameLayout>
