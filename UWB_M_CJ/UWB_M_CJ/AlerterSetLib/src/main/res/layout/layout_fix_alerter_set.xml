<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Id："
                android:gravity="center_vertical|right"
                android:textColor="#000"
                android:layout_marginRight="8dp"
                android:textSize="10sp"/>

            <EditText
                android:id="@+id/etId_fix"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/edit_bg"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textColor="#000"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnSetId_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="set"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button_bg"
                android:textSize="10sp"/>

            <View
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="ForkLift Alarm En："
                android:gravity="center_vertical|right"
                android:textColor="#000"
                android:layout_marginRight="8dp"
                android:textSize="10sp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40sp"
                android:layout_gravity="center_vertical">

                <Spinner
                    android:id="@+id/spForkLiftAlarmEn_fix"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_normal"
                    android:textSize="10sp">

                </Spinner>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_drop_down"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="8dp"
                    android:textSize="10sp"/>

            </FrameLayout>

            <Button
                android:id="@+id/btnSetForkLiftAlarmEn_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="set"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button_bg"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnReadForkLiftAlarmEn_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="read"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:textSize="10sp"/>


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvForkLiftAlarmRange"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="ForkLift Alarm Range："
                android:gravity="center_vertical|right"
                android:textColor="#000"
                android:layout_marginRight="8dp"
                android:textSize="10sp"/>

            <EditText
                android:id="@+id/etForkLiftAlarmRange_fix"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/edit_bg"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textColor="#000"
                android:textSize="10sp"
                android:inputType="number"/>

            <Button
                android:id="@+id/btnSetForkLiftAlarmRange_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="set"
                android:layout_marginLeft="8dp"
                android:textSize="10sp"
                android:background="@drawable/button_bg"/>

            <Button
                android:id="@+id/btnReadForkLiftAlarmRange_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="read"
                android:textSize="10sp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Pan Id："
                android:gravity="center_vertical|right"
                android:textColor="#000"
                android:layout_marginRight="8dp"
                android:textSize="10sp"/>

            <EditText
                android:id="@+id/etPanId_fix"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/edit_bg"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textColor="#000"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnSetPanId_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="set"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button_bg"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnReadPanId_fix"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="read"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:textSize="10sp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnResetPanId_fix"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:text="reset PanId"
            android:layout_gravity="right"
            android:textSize="10sp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="8dp"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"/>


    </LinearLayout>

</ScrollView>
